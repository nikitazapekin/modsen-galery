{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "Node",
    "types": ["styled-components"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@assets/*": ["./assets/*"],
      "@routes/*": ["./routes/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
